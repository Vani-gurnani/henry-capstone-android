<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#666666"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:layout_weight="1"
        android:id="@+id/name_user2"
        android:layout_gravity="center"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff8fffb" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/name_user"
        android:layout_alignBottom="@+id/name_user"
        android:layout_alignLeft="@+id/editText0"
        android:layout_alignStart="@+id/editText0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Number"
        android:layout_weight="1"
        android:id="@+id/contactnumber2"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignLeft="@+id/name_user"
        android:layout_alignStart="@+id/name_user"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_gravity="center|right"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/email_id_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email ID"
        android:layout_weight="1"
        android:id="@+id/email_id_2"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/editText0"
        android:layout_alignLeft="@+id/name_user"
        android:layout_alignStart="@+id/name_user"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText0"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_below="@+id/editText1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/contactnumber"
        android:layout_toRightOf="@+id/contactnumber"
        android:layout_toEndOf="@+id/contactnumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ADD SECOND CONTACT"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="20dp"
        android:id="@+id/textView"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/email_id_1"
        android:layout_toEndOf="@+id/email_id_1" />

</RelativeLayout>